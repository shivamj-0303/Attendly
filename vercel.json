{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "attendly",
  "buildCommand": "cd landing-page && npm run build",
  "outputDirectory": "landing-page/dist",
  "framework": "vite",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "preview": true
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
